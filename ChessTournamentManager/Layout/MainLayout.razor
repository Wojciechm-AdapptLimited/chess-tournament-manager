@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Style="height: 100vh; width: 100vw;">
    <NavRail />
    <MudMainContent Class="h-100">
        <MudContainer MaxWidth="MaxWidth.Large" Class="h-100 d-flex flex-column justify-content-center">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code 
{
    private readonly MudTheme _theme = new()
    {
        Palette = new PaletteLight()
        {
            Primary = Colors.Brown.Darken2,
            Secondary = Colors.Brown.Lighten2,
            Tertiary = Colors.Green.Lighten3,
            Background = Colors.BlueGrey.Lighten5,
            TextPrimary = Colors.Shades.Black
        },
        PaletteDark = new PaletteDark()
        {
            Primary = Colors.Brown.Lighten4,
            Secondary = Colors.Brown.Darken1,
            Tertiary = Colors.Green.Lighten3,
            Background = Colors.Grey.Darken4,
            TextPrimary = Colors.Shades.White
        },
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = ["Poppins", "Helvetica", "Arial", "sans-serif"]
            }
        },
        LayoutProperties = new LayoutProperties()
        {
            DefaultBorderRadius = "20px",
        }
    };
}